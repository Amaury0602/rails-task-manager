<h1>Hello here's your task</h1>



<h3><%= @task.title %></h3>
<p><%= @task.details %> </p>
<p><%= link_to "Back to list", tasks_path%></p>


<p><%= link_to "Edit this task", edit_path(@task)%></p>



<div class="container">
  <%= link_to "Delete", destroy_path(@task),
  method: :delete,
  data: { confirm: "Are you sure?" } %>
</div>
